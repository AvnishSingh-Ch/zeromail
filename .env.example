# Gmail IMAP Cleaner Environment Configuration
# Copy this file to .env and fill in your actual values

# Gmail Credentials
GMAIL_EMAIL=your.email@gmail.com
GMAIL_PASSWORD=your_app_password_here

# Alternative email providers (if implementing multi-provider support)
OUTLOOK_EMAIL=
OUTLOOK_PASSWORD=
YAHOO_EMAIL=
YAHOO_PASSWORD=

# Default Settings
DEFAULT_CUTOFF_DATE=01-Jan-2023
DEFAULT_FOLDER=INBOX
DEFAULT_BATCH_SIZE=500

# Security Settings
ENCRYPT_CREDENTIALS=true
CREDENTIAL_STORAGE_PATH=./credentials

# Performance Settings
REQUEST_DELAY=1
HTTP_TIMEOUT=10
MAX_CONCURRENT_REQUESTS=5

# Logging Settings
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=./logs

# Backup Settings
BACKUP_BEFORE_DELETE=true
BACKUP_PATH=./backups
BACKUP_FORMAT=mbox

# Analytics Settings
ENABLE_ANALYTICS=true
ANALYTICS_DB_PATH=./analytics.db

# Scheduling Settings
ENABLE_SCHEDULED_CLEANUP=false
CLEANUP_SCHEDULE=weekly
CLEANUP_DAY=sunday
CLEANUP_TIME=02:00

# Web Dashboard Settings (for future web interface)
WEB_INTERFACE_ENABLED=false
WEB_HOST=localhost
WEB_PORT=8080
WEB_SECRET_KEY=your_secret_key_here

# Notification Settings
ENABLE_DESKTOP_NOTIFICATIONS=true
ENABLE_EMAIL_REPORTS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Advanced Features
ENABLE_ML_CLASSIFICATION=false
ML_MODEL_PATH=./models
ENABLE_SMART_RULES=true
RULES_CONFIG_PATH=./rules.yaml
